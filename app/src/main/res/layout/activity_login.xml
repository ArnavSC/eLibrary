<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@drawable/loginbackground">
        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Login With your Account"-->
        <!--            android:textSize="20dp"-->
        <!--            >-->

        <!--        </TextView>-->

        <ImageView
            android:layout_width="348dp"
            android:layout_height="40dp"
            android:src="@drawable/text1"
            ></ImageView>

        <EditText

            android:layout_height="50dp"
            android:layout_width="348dp"
            android:textColorHint="@color/lightpurple"
            android:background="@drawable/email"
            android:id="@+id/email"
            android:hint="Email"
            android:paddingLeft="30dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="20dp">

        </EditText>
        <EditText
            android:layout_height="50dp"
            android:layout_width="348dp"
            android:textColorHint="@color/lightpurple"
            android:background="@drawable/password"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:hint="Password"
            android:layout_marginTop="20dp">

        </EditText>
        <!--Button-->
        <ImageButton
            android:id="@+id/login"
            android:background="@drawable/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Login" />

        <!--        <TextView-->
        <!--            android:id="@+id/textView5"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:gravity="center"-->
        <!--            android:text="Login With Phone Number"-->
        <!--            android:textSize="20dp" />-->
        <ImageView
            android:id="@+id/textView5"
            android:layout_width="348dp"
            android:layout_height="50dp"
            android:src="@drawable/text2"
            android:layout_marginTop="25dp">

        </ImageView>

        <EditText
            android:layout_height="50dp"
            android:layout_width="348dp"
            android:textColorHint="@color/lightpurple"
            android:background="@drawable/number"
            android:id="@+id/phoneNumber"
            android:inputType="text"
            android:paddingLeft="30dp"
            android:hint="Phone Number (+91)"
            android:layout_marginTop="20dp">

        </EditText>
        <!--Button-->
        <ImageButton
            android:id="@+id/getotp"
            android:background="@drawable/otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="get otp" />

        <!--Button-->
        <EditText
            android:id="@+id/otp"
            android:layout_width="348dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/password2"
            android:paddingLeft="30dp"
            android:hint="One Time Password(OTP)"
            android:inputType="number">

        </EditText>

        <ImageButton
            android:id="@+id/mlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login"
            android:text="Login" />
    </LinearLayout>
</RelativeLayout>